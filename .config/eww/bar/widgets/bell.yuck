(defwidget bell []
  (box
    :class "bell"
    (eventbox
      :cursor "pointer"
      :halign "center"
      (overlay
        (button
          :class "bell icon"
          :tooltip "${notifications.count} Notifications"
          :onclick "${EWW_CMD} close powermenu player & scripts/notifications.py --open & ${EWW_CMD} open-many --toggle background-closer notifications"
          :onrightclick "dunstctl set-paused toggle"
          :style "color: ${dnd ? '#dd6777;' : '#ceb188;'} transition: all 0.3s;"
          {dnd ? " " : " "}
        )
      )
    )
  )
)