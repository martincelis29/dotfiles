;; =================== WORKSPACES WIDGET =====================
(defwidget workspaces []
  (eventbox
    :onscroll "scripts/workspaces.sh changeCurrentWorkspace {} ${current_workspace}"
    :class "workspaces"
    (box
      :space-evenly false
      (for workspace in workspaces
        (button
          :class "entry ${workspace.id == current_workspace ? "current" : ""} ${workspace.windows > 0 ? "occupied" : "empty"}"
          :onclick "hyprctl dispatch workspace ${workspace.id}"
          (label
            :tooltip "Workspace ${workspace.id} '${workspace.id == current_workspace ? "current" : workspace.windows > 0 ? "occupied" : "empty"}'"
            :text {workspace.windows > 0 ? "${workspace.id == current_workspace ? "󰊠" : ""}" : ""}
          )
        )
      )
    )
  )
)